.radio-group {
    padding: 0;
    margin: 0;
    border: none;
    display: flex;
    width: 100%;
    gap: 16px 32px;

    &_row {
        flex-wrap: wrap;
    }

    &_column {
        flex-direction: column;
    }

    &__legend {
        width: 100%;
        padding: 0;
        margin: 0 0 16px;
        flex-grow: 1;
    }
}
