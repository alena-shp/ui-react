.tab-panel {
    display: none;
    box-sizing: border-box;

    &_selected {
        display: block;
    }

    &_preset-pane {
        border-radius: 0 4px 4px;
        padding: 24px;
        border: solid 1px var(--color-border-basic);
        background-color: var(--color-bg-base);
    }

    &_preset-section,
    &_preset-page {
        padding-top: 32px;
    }
}
